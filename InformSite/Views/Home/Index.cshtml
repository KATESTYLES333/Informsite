@using InformSite.Models
@using InformSite.ViewModels
@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<p>
    <h3 class="text-center">
        Приблизьтесь к добру вместе с нами!
    </h3>
</p>
<p class="text-center">
    <i>Сделайте всего три простых шага:</i>
</p>



<div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="http://images.vfl.ru/ii/1587293256/4b3b4e04/30264483.jpg" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Зарегистрируйтесь на сайте</h5>
                    <p>Станьте частью нашей команды буквально за пару кликов</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="http://images.vfl.ru/ii/1587291384/eebfb35c/30264208.jpg" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Выберите проект</h5>
                    <p>Множество идей ждёт вашей поддержки прямо сейчас</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="http://images.vfl.ru/ii/1587291426/97fc2ed3/30264209.png" class="d-block w-100">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Поддержите задуманное</h5>
                    <p>Присоединяйтесь к реализации электронным спонсорством</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <p> </p>
    <form class="form-inline">
        <label>Выберите категорию:ᅠ</label>
        <select name="categoryId" class="form-control">

            @foreach (Category cat in Model.Categories)
            {
                <option value="@cat.CategoryId">@cat.Title</option>

            }
        </select>
        <p>ᅠ</p>
        <button type="submit" class="btn btn-primary">Поиск</button>
    </form>
    <br />
    <div class="row">
        @foreach (Project p in Model.Projects)
        {

            <div class="col-sm-6 col-md-4">
                <p>
                    <div class="card-group">
                        <div class="card" style="width: 10rem;">
                            <div class="caption">
                                <img class="card-img-top" height="222" width="310" src="http://images.vfl.ru/ii/1584828655/68802f7e/29957806.jpg" />
                                <div class="card-body" style="max-height:400px;min-height:300px;">
                                    <h4>
                                        @p.Name
                                    </h4>
                <p> </p>
                <h6 style="min-height: 315px; max-height:320px;">
                    @p.Description

                </h6>

            </div>

            <div class="card-footer text-muted">
                <small><i>Метки:</i></small>
                <span class="badge badge-info">
                    @p.Category?.Title
                </span>
                <p> </p>
                <div class="card-text">
                    <progress class="w-100 p-3" value="@p.StartPrice" max="@p.FinalPrice">
                    </progress>
                    <p>@p.StartPrice руб. собрано из @p.FinalPrice</p>
                    <p><a href="#" class="btn btn-primary" role="button">Пожертвовать</a></p>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
}



